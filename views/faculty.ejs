    <!-- Modal for the pop-up message -->
    <div id="popupModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeModal()">&times;</span>
            <h2>Your complaint has been submitted successfully!</h2>
            <button onclick="window.location.href = '/suportstaff';">Next</button>
        </div>
    </div>

    <script>
        // Function to show modal pop-up message
        function showPopup() {
            document.getElementById("popupModal").style.display = "block";
            return false; // Prevent form submission to show the modal first
        }

        // Function to close the modal
        function closeModal() {
            document.getElementById("popupModal").style.display = "none";
            // Submit the form after closing the modal
            document.querySelector("form").submit();
        }

        // Close modal when clicked outside the modal content
        window.onclick = function(event) {
            if (event.target == document.getElementById("popupModal")) {
                closeModal();
            }
        }
    </script>

